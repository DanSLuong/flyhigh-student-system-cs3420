<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Number</th>
      <th>Credit</th>
      <th>Title</th>
      <th>Description</th>
      <th>Time</th>
      <th>Days</th>
      <th>Room</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.subject %></td>
        <td><%= course.number %></td>
        <td><%= course.credit %></td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.time %></td>
        <td><%= course.days %></td>
        <td><%= course.room %></td>
        <td><%= course.instructor %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

