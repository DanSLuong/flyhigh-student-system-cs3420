        <%# </span> %>
      </div>
    </div>
  </div>

  <div class="flashes"></div>

  <div id="active_admin_content" class="with_sidebar">
    <div id="main_content_wrapper">
      <div id="main_content">
        <div class="panel">
          <h3>Student Details</h3>
          <div class="panel_contents">
            <div class="attributes_table">
              <table>
                <tbody>
                    <tr class="row">
                      <th> FIRST NAME </th>
                      <td><%= @student.first_name %></td>
                    </tr>
                    <tr class="row">
                      <th> LAST NAME </th>
                      <td><%= @student.last_name %></td>
                    </tr>
                    <tr class="row">
                      <th> EMAIL </th>
                      <td><%= @student.email %></td>
                    </tr>
                    <tr class="row">
                      <th> DATE OF BIRTH </th>
                      <td><%= @student.date_of_birth %></td>
                    </tr>
                    <tr class="row">
                      <th> ADDRESS </th>
                      <td><%= @student.address %></td>
                    </tr>
                    <tr class="row">
                      <th> MAJOR </th>
                      <td><%= @student.major %></td>
                    </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

