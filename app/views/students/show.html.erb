<div id="wrapper">
  <div id="header" class="header">
    <h1 id="site_title" class="site_title">
      Flyhigh Student System
    </h1>

    <ul id="utility_nav" class="header_item tabs">
      <li class="current_use"><%= @student.email %></li>
      <li class="logout">
        <%= link_to "Log out", destroy_student_session_path, method: :delete %>
      </li>
    </ul>
  </div>

  <div id="title_bar" class="title_bar">
    <div id="titlebar_left">
      <span class="breadcrum">
        <span class="breadcrum_sep"></span>
      </span>
      <h2 class="page_title">
        <%= "#{@student.first_name} #{@student.last_name}" %>
      </h2>
    </div>

    <div id="titlebar_right">
      <div class="action_items">
        <span class="action_item">
          <%= link_to "Edit Student Info", edit_student_path(@student) %>
        </span>
